name: rhine-gloss
version: 1.4
synopsis: Gloss backend for Rhine
description:
  This package provides a simple wrapper for the `gloss` library,
  or rather the function `Graphics.Gloss.play`,
  enabling you to write `gloss` applications as signal functions.

license: BSD3
license-file: LICENSE
author: Manuel BÃ¤renz
maintainer: programming@manuelbaerenz.de
-- copyright:
category: FRP
build-type: Simple
extra-source-files: ChangeLog.md
extra-doc-files: README.md
cabal-version: 2.0

source-repository head
  type: git
  location: https://github.com/turion/rhine.git

source-repository this
  type: git
  location: https://github.com/turion/rhine.git
  tag: v1.4

library
  exposed-modules:
    FRP.Rhine.Gloss
    FRP.Rhine.Gloss.Common
    FRP.Rhine.Gloss.IO
    FRP.Rhine.Gloss.Pure
    FRP.Rhine.Gloss.Pure.Combined

  build-depends:
    automaton,
    base >=4.14 && <4.20,
    gloss >=1.12,
    mmorph >=1.1,
    monad-schedule >=0.1,
    rhine ==1.4,
    transformers >=0.5

  hs-source-dirs: src
  default-language: Haskell2010
  default-extensions: TypeOperators
  ghc-options: -W

  if flag(dev)
    ghc-options: -Werror

executable rhine-gloss-gears
  main-is: Main.hs
  ghc-options: -threaded
  build-depends:
    base >=4.14 && <4.20,
    rhine-gloss

  default-language: Haskell2010
  default-extensions: TypeOperators
  ghc-options:
    -W
    -threaded
    -rtsopts
    -with-rtsopts=-N

  if flag(dev)
    ghc-options: -Werror

flag dev
  description: Enable warnings as errors. Active on ci.
  default: False
  manual: True
